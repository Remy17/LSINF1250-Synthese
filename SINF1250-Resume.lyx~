\begin_inset Formula $=x^{4}+4x^{3}y+6x^{2}y^{2}+4xy^{3}+y^{4}$
\end_inset


\end_layout

\end_inset
</cell>
</row>
</lyxtabular>

\end_inset


\end_layout

\begin_layout Theorem*
Soit 
\begin_inset Formula $n$
\end_inset

 un entier positif.
 Alors 
\begin_inset Formula 
\[
\sum_{k=0}^{n}(-1)^{k}C(n,k)=0
\]

\end_inset

.
\end_layout

\begin_layout Standard
Ce théorème peut être obtenu à partir du théorème du binôme de 
\begin_inset Formula $((-1)+1)^{n}=0$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Newpage newpage
\end_inset


\end_layout

\begin_layout Section
Techniques de dénombrement avancées 
\end_layout

\begin_layout Subsection
Relation de récurrence
\end_layout

\begin_layout Definition
Une 
\series bold
relation de récurrence
\series default
 pour la suite 
\begin_inset Formula $\{a_{n}\}$
\end_inset

 est une formule qui exprime 
\begin_inset Formula $a_{n}$
\end_inset

 en fonction d'un ou de plusieurs termes qui le précèdent dans la suite,
 soit 
\begin_inset Formula $a_{0},a_{1},...,a_{n-1}$
\end_inset

, pour tout entier 
\begin_inset Formula $n$
\end_inset

 tel que 
\begin_inset Formula $n\geq n_{0}$
\end_inset

, où 
\begin_inset Formula $n_{0}$
\end_inset

 est un nombre entier non négatif.
 Une suite est une 
\series bold
solution
\series default
 d'une relation de récurrence si ses termes satisfont la relation de récurrence.
\end_layout

\begin_layout Standard
Les 
\series bold
conditions initiales
\series default
 d'une suite spécifient les éléments qui précèdent le premier élément à
 partir duquel la relation de récurrence s'applique.
\end_layout

\begin_layout Subsection
Solution des relations de récurrence
\end_layout

\begin_layout Subsubsection*

\series bold
Relation de récurrence linéaire homogène de degré 
\begin_inset Formula $k$
\end_inset

 à coefficients constants
\end_layout

\begin_layout Definition
Une 
\series bold
relation de récurrence linéaire homogène de degré 
\begin_inset Formula $k$
\end_inset

 à coefficients constants
\series default
 est une relation de récurrence de la forme
\end_layout

\begin_layout Definition
\begin_inset Formula 
\[
a_{n}=c_{1}a_{n-1}+c_{2}a_{n-2}+...+c_{k}a_{n-k}
\]

\end_inset


\end_layout

\begin_layout Definition
où 
\begin_inset Formula $c_{1},c_{2},...,c_{k}$
\end_inset

 sont des nombres réels avec 
\begin_inset Formula $c_{k}\neq0$
\end_inset

.
\end_layout

\begin_layout Theorem*
1.
 Soit 
\begin_inset Formula $c_{1}$
\end_inset

et 
\begin_inset Formula $c_{2}$
\end_inset

 des nombres réels.
 On suppose que l'équation 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
r^{2}-c_{1}r-c_{2}=0
\]

\end_inset

 
\end_layout

\begin_layout Theorem*
a une racine double 
\begin_inset Formula $r_{0}$
\end_inset

.
 Alors, la suite 
\begin_inset Formula $\{a_{n}\}$
\end_inset

 est une solution de la relation de récurrence 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
a_{n}=c_{1}a_{n-1}+c_{2}a_{n-2}
\]

\end_inset

 
\end_layout

\begin_layout Theorem*
si et seulement si 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
a_{n}=\alpha_{1}r_{0}^{n}+\alpha_{2}r_{0}^{n}
\]

\end_inset

 
\end_layout

\begin_layout Theorem*
pour 
\begin_inset Formula $n=0,1,2,...$
\end_inset

, où 
\begin_inset Formula $\alpha_{1}$
\end_inset

 et 
\begin_inset Formula $\alpha_{2}$
\end_inset

 sont des constantes.
\end_layout

\begin_deeper
\begin_layout Theorem*
2.
 Soit 
\begin_inset Formula $c_{1}$
\end_inset

et 
\begin_inset Formula $c_{2}$
\end_inset

 des nombres réels avec 
\begin_inset Formula $c_{2}\neq0$
\end_inset

.
 On suppose que l'équation 
\begin_inset Formula 
\[
r^{2}-c_{1}r-c_{2}=0
\]

\end_inset

 possède deux racines distinctes 
\begin_inset Formula $r_{1}$
\end_inset

 et 
\begin_inset Formula $r_{2}$
\end_inset

.
 Alors, la suite 
\begin_inset Formula $\{a_{n}\}$
\end_inset

 est une solution de la relation de récurrence 
\begin_inset Formula 
\[
a_{n}=c_{1}a_{n-1}+c_{2}a_{n-2}
\]

\end_inset

 si et seulement si 
\begin_inset Formula 
\[
a_{n}=\alpha_{1}r_{1}^{n}+\alpha_{2}r_{2}^{n}
\]

\end_inset

 pour 
\begin_inset Formula $n=0,1,2,...$
\end_inset

, où 
\begin_inset Formula $\alpha_{1}$
\end_inset

 et 
\begin_inset Formula $\alpha_{2}$
\end_inset

 sont des constantes.
\end_layout

\begin_deeper
\begin_layout Theorem*
3.
 Soit 
\begin_inset Formula $c_{1},c_{2},...,c_{k}$
\end_inset

 des nombres réels.
 On suppose que l'équation caractéristique 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
r^{k}-c_{1}r^{k-1}-...-c_{k}=0
\]

\end_inset

 
\end_layout

\begin_layout Theorem*
admet 
\begin_inset Formula $k$
\end_inset

 racines distinctes 
\begin_inset Formula $r_{1},r_{2},...,r_{k}$
\end_inset

.
 Alors, une suite 
\begin_inset Formula $\{a_{n}\}$
\end_inset

 est une solution de la relation de récurrence 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
a_{n}=c_{1}a_{n-1}+c_{2}a_{n-2}+...+c_{k}a_{n-k}
\]

\end_inset


\end_layout

\begin_layout Theorem*
si et seulement si
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
a_{n}=\alpha_{1}r_{1}^{n}+\alpha_{2}r_{2}^{n}+...+\alpha_{k}r_{k}^{n}
\]

\end_inset


\end_layout

\begin_layout Theorem*
pour 
\begin_inset Formula $n=0,1,2,...,$
\end_inset

 où 
\begin_inset Formula $\alpha_{1},\alpha_{2},...,\alpha_{k}$
\end_inset

 sont des constantes.
\end_layout

\begin_deeper
\begin_layout Theorem*
4.
 Soit 
\begin_inset Formula $c_{1},c_{2},...,c_{k}$
\end_inset

 des nombres réels.
 On suppose que l'équation caractéristique 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
r^{k}-c_{1}r^{k-1}-...-c_{k}=0
\]

\end_inset

 
\end_layout

\begin_layout Theorem*
admet 
\begin_inset Formula $t$
\end_inset

 racines distinctes 
\begin_inset Formula $r_{1},r_{2},...,r_{t}$
\end_inset

 avec des multiplicités 
\begin_inset Formula $m_{1},m_{2},...,m_{t}$
\end_inset

 respective tel que 
\end_layout

\begin_layout Theorem*
\begin_inset Formula $m_{i}\geq1$
\end_inset

 pour 
\begin_inset Formula $i=0,1,2,...,t$
\end_inset

 
\end_layout

\begin_layout Theorem*
et 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
m_{1}+m_{2}+...+m_{t}=k
\]

\end_inset

.
 
\end_layout

\begin_layout Theorem*
Alors, une suite 
\begin_inset Formula $\{a_{n}\}$
\end_inset

 est une solution de la relation de récurrence 
\end_layout

\begin_layout Theorem*
\begin_inset Formula 
\[
a_{n}=c_{1}a_{n-1}+c_{2}a_{n-2}+...+c_{k}a_{n-k}
\]

\end_inset


\end_layout

\begin_layout Theorem*
si et seulement si
\end_layout

\begin_layout Theorem*
\begin_inset Tabular
<lyxtabular version="3" rows="4" columns="2">
<features rotate="0" tabularvalignment="middle">
<column alignment="left" valignment="top">
<column alignment="left" valignment="top">
<row>
<cell alignment="left" valignment="top" usebox="none">
\begin_inset Text

\begin_layout Plain Layout
\begin_inset Formula $a_{n}=$
\end_inset


\end_layout

\end_inset
</cell>
<cell alignment="left" valignment="top" usebox="none">
\begin_inset Text

\begin_layout Plain Layout
\begin_inset Formula $(\alpha_{1,0}+\alpha_{1,1}n+...+\alpha_{1,m_{1}-1}n^{m_{1}-1})r_{1}^{n}$
\end_inset


\end_layout

\end_inset
</cell>
</row>
<row>
<cell alignment="left" valignment="top" usebox="none">
\begin_inset Text

\begin_layout Plain Layout

\end_layout

\end_inset
</cell>
<cell alignment="left" valignment="top" usebox="none">
\begin_inset Text

\begin_layout Plain Layout
\begin_inset Formula $+(\alpha_{2,0}+\alpha_{2,1}n+...+\alpha_{2,m_{2}-1}n^{m_{2}-1})r_{2}^{n}$
\end_inset


\end_layout

\end_inset
</cell>
</row>
<row>
<cell alignment="left" valignment="top" usebox="none">
\begin_inset Text

\begin_layout Plain Layout

\end_layout

\end_inset
</cell>
<cell alignment="left" valignment="top" usebox="none">
